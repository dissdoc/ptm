%div
  %label Tags
  = link_to '(add a tag)', '#', :class => 'link', :id => 'add_tags'
  %br
  %span#tags
    - if photo.tags.present?
      = render :partial => 'tags/shared/tag', :collection => photo.tags, :locals => { :photo => photo }

- if signed_in?
  =  render :partial => 'tags/shared/form', :locals => { :photo => photo }

:javascript
  $(document).ready(function() {
    $('#add_tags').click(function() {
      $('#tags_form').css({'display':'block'});
      $('#tags_field').val('');
      return false;
    });

    $('#cancel_tags').click(function() {
      $('#tags_field').val('');
      $('#tags_form').css({'display':'none'});
      return false;
    });
  });