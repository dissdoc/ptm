%li
  %div
    %div.imaging
      - if album.thumbnail
        = link_to image_tag(album.show_thumbnail.image.url(:medium)), album
      - elsif album.photos.first
        = link_to image_tag(album.photos.first.image.url(:medium)), album

    %div.name
      = link_to album.name, album
      - if signed_in? && current_user.admin_of_album?(album)
        = link_to image_tag('edit.png'), edit_album_path(album)
        = link_to image_tag('share.png'), album_share_path(album)
        = link_to image_tag('delete.png'), album, :method => :delete, :remote => true
      %div= pluralize(album.photos.count, 'photo')

    %div.actions
