%h4= album.name

%div= album.description

%div
  - if album.thumbnail
    = image_tag album.show_thumbnail.image.url(:medium)
  - elsif album.collection
    = image_tag album.photo_album_joins.first.photo.image.url(:medium) if album.photo_album_joins.present?
  - elsif album.photos.first
    = image_tag album.photos.first.image.url(:medium)



%div= l album.created_at, :format => :full

= link_to "detail", album
- if signed_in? && current_user.admin_of_album?(album)
  |
  = link_to "edit", edit_album_path(album)
  |
  = link_to "delete", album, :method => :delete
  |
  = link_to "sharing", album_share_path(album)