%li
  %div.item
    %div.name= link_to album.name, album

    %div.imaging
      - if album.thumbnail
        = image_tag album.show_thumbnail.image.url(:medium)
      - elsif album.photos.first
        = image_tag album.photos.first.image.url(:medium)

    %div.actions
      - if signed_in? && current_user.admin_of_album?(album)
        = link_to image_tag('edit.png'), edit_album_path(album)
        = link_to image_tag('share.png'), album_share_path(album)
        = link_to image_tag('delete.png'), album, :method => :delete, :remote => true