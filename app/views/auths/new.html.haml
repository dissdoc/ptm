%h4
  Sign up

= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
  = devise_error_messages!

  = render :partial => "auths/shared/important_step", :locals => { :f => f }

  = render :partial => "auths/shared/about_step", :locals => { :f => f }

  %div
    = f.submit "Sign up"

= render "links"