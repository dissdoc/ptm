%html
  %head
    %title= title_page
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.container
      = render "shared/header"

      %div.span-24
        = yield :breadcrumbs

        %div.span-16
          = yield
