%div#search-combo-box
  %div.field
    = text_field_tag :search_field
    = hidden_field_tag :search_value
  %div.combo
    %div
      %p &#9660;
    %ul
      %li= link_to 'Full text', '', :value => '1', :remote => true
      %li= link_to 'Tags only', '', :value => '2', :remote => true
  %div.clear


%script{ :type => "text/javascript", :src => "/assets/ptm.search.js" }
:javascript
  $(document).ready(function(){
    $('#search-combo-box').ptmSearch();
  });