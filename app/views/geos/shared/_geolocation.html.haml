%div#geolocation{ :style => 'padding:0px' }
  = text_field_tag :geofield, address, :class => 'field_lite'
  = hidden_field_tag :latitude, latitude
  = hidden_field_tag :longitude, longitude

  %div#geomap{ :style => 'clear: none !important;' }

%script{ :type => "text/javascript", :src => "/assets/ptm.geolocation.js" }
:javascript
  $(window).load(function() {
    var t = $('#geolocation').ptmGeolocation({
      width: '426px',
      height_map: '240px',
      marker: '/assets/GoogleMap_Pink.png',
    });
  });
