%div.dialog
  = form_for @assortment do |f|
    %legend= legend

    = render :partial => 'shared/error_messages', :locals => { :target => @assortment }

    %div
      %div= f.label :name
      %div= f.text_field :name

    %div
      %div= f.label :description
      %div= f.text_area :description

    %div
      %div.action= f.submit button