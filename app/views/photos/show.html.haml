= link_to "Edit", edit_album_photo_url(@album, @photo)

%p
  = image_tag @photo.image.url(:medium)

%p
  %label Generate at:
  = @photo.generate

%p
  %label Tags:
  = @photo.tag_names

- if @photo.share_photo
  %label Public:
  = @photo.share_photo.share

- if @photo.geo
  %p
    %label Geolocation
    %div
      = @photo.geo.address
    = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@photo.geo.latitude}%2C#{@photo.geo.longitude}"

= form_for [@album, @photo, @note] do |f|
  %div
    = f.label :message
    = f.text_area :message, :rows => 5
  %div
    = f.submit "Add"

- if @notes
  - @notes.each do |note|
    %p
      = note.message
      %u= note.author
      - if note.is_admin?(current_user)
        = link_to "Delete", [@album, @photo, note], :method => :delete