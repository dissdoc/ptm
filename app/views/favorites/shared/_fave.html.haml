- if current_user.photo_fave?(photo)
  = link_to image_tag('ICON_Favorites.png'),
            favorites_unfave_path(:photo_id => photo),
            :method => :post,
            :remote => true
- else
  = link_to image_tag('ICON_Favorites_on.png'),
            favorites_fave_path(:photo_id => photo),
            :method => :post,
            :remote => true