%div.comment
  %div.image
    - if note.user.avatar.exists?
      = image_tag note.user.avatar.url(:small)
    - else
      = image_tag "nologo.jpg", :width => '40', :height => '40'
  %div.text
    = link_to note.author, detail_path(:id => note.user)
    %br
    %span= note.message
    %br
    %span
      = time_ago_in_words(note.created_at)
      ago
  %div.clear